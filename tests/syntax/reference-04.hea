def g()
  let y : Int = 42
  let x : Int = 5
  let px : ^Int = nil
  let qx : ^Int = nil

  qx = ^x  -- qx now points to x (take address of x)
  qx = y   -- set x to y
  px = qx  -- px points to the same value a qx

  qx^ = 11  -- now x has the value 11 and qx and px point still to the same
            -- address.  y is not affected
